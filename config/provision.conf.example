# Core behavior
TARGET_SQL_MAJOR="2025"
SUPPORTED_OS_ID="ubuntu"
SUPPORTED_OS_VERSION="24.04"
DRY_RUN_DEFAULT="1"

# Version strategy: latest|pinned|explicit
VERSION_STRATEGY="latest"
PINNED_BUILD=""
EXPLICIT_DEB_URL=""
MSSQL_PROVISION_KIT_REPO_URL="https://github.com/nth-prime/mssql-provision-kit"
MSSQL_PROVISION_KIT_BRANCH="main"

# Edition: Developer|Standard
MSSQL_EDITION="Developer"
MSSQL_STANDARD_PRODUCT_KEY=""
ALLOW_KEY_PERSIST="0"

# Auth
PROMPT_FOR_SA_PASSWORD="1"
MSSQL_SA_PASSWORD=""
DEFAULT_SYSADMIN_LOGIN="sqladmin"
DEFAULT_SYSADMIN_PASSWORD=""

# Single-drive SQL layout
SQL_STORAGE_ROOT="/var/opt/mssql"
SQL_DATA_PATH="/var/opt/mssql/data"
SQL_LOG_PATH="/var/opt/mssql/log"
SQL_BACKUP_PATH="/var/opt/mssql/backup"
SQL_TEMPDB_PATH="/var/opt/mssql/tempdb"

# Network policy
SQL_TCP_PORT="1433"
NETWORK_ENFORCE_WHITELIST="1"
NETWORK_ALLOWED_IPV4=""
NETWORK_ALLOWED_IPV6=""
NETWORK_ALLOW_TAILSCALE="1"
NETWORK_TAILSCALE_INTERFACE="tailscale0"
